<%- include("partials/loggedin"); %>

<div class="card-group mt-5">
    <% cars.forEach(car => { %>
            <div class="card mx-4 border border-secondary rounded" style="background-color: lightgrey;">
                <img class="card-img-top" src="<%= car.imageURL %>" alt="<%= car.type %>">
                <div class="card-body d-flex flex-column justify-content-end">
                    <h4 class="card-title"><%= car.brand %> <%= car.type %></h4>
                    <p class="card-text"><%= car.rentprice %> Ft/ hó</p>
                    <a href="/cars/<%= car.lplate %>" class="btn btn-secondary ">Megtekintés</a>
                </div>
            </div>
    <% }) %> 
</div>

<%- include("partials/footer"); %>